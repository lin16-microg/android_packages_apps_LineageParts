<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fw_list_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/data_restriction_manager_row_height"
        android:orientation="horizontal">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:gravity="center_vertical"
            android:textAppearance="@android:style/TextAppearance.Material.Body2"
            android:textColor="?android:attr/colorAccent"
            android:layout_marginLeft="@dimen/data_restriction_manager_image_column_width"/>

        <ImageView
            android:id="@+id/wifi_icon"
            android:layout_width="@dimen/data_restriction_manager_check_box_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_signal_wifi_4_bar_48px"
            android:gravity="center"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/cell_icon"
            android:layout_width="@dimen/data_restriction_manager_check_box_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_signal_cell_4_bar_24px"
            android:gravity="center"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/cell_icon"
            android:layout_width="@dimen/data_restriction_manager_check_box_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_vpn_key"
            android:gravity="center"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/cell_icon"
            android:layout_width="@dimen/data_restriction_manager_check_box_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_background_data_24px"
            android:gravity="center"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/vpn_icon"
            android:layout_width="@dimen/data_restriction_manager_check_box_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_data_saver_unrestricted_24px"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginRight="@dimen/data_restriction_manager_scrollbar_width"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:scrollbarSize="@dimen/data_restriction_manager_scrollbar_width"/>
</LinearLayout>